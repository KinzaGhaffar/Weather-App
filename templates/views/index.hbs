<html>
  <head>
    <title>{{title}}</title>
    <link rel="stylesheet" href="css/styles.css" />
    <!-- static path for public folder is already set in app.js -->
  </head>
  <body>
    <div class="main-content">
      <article class="widget">

        <form class="weatherLocation">

          <input
            class="input-field"
            placeholder="Enter Location..."
            type="text"
          />

          <button class="search-button">
            Search
          </button>

        </form>

        <div class="icon-and-weatherInfo">
          <div class="weatherIcon"><i></i></div>
          <div class="weatherInfo">
            <div class="temperature"><span></span></div>
            <div class="weatherCondition"></div>
          </div>
        </div>
        <div class="place"></div>
        <div class="date"></div>
      </article>
    </div>
    <script src="js/app.js"></script>
    <!-- absolute path -->
  </body>
</html>